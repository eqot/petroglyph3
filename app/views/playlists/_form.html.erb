<%= form_for playlist, :html => {:class => "form-horizontal", onkeypress: "onKeyPress(event)"} do |f| %>

  <div class="form-group">
    <%= f.label :title, class: "col-lg-3 control-label", for: "inputTitle" %>

    <div class="col-lg-6">
      <%= f.text_field :title, class: "form-control", id: "inputTitle" %>
    </div>

    <% if playlist.errors.any? %>
      <p class="help-block">
        <p class="text-danger">
          <%= playlist.errors.messages[:title][0] %>
        </p>
      </p>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "col-lg-3 control-label", for: "inputDescription" %>

    <div class="col-lg-6">
      <%= f.text_area :description, class: "form-control", id: "inputDescription", rows: "10" %>
    </div>

    <% if playlist.errors.any? %>
      <p class="help-block">
        <p class="text-danger">
          <%= playlist.errors.messages[:description][0] %>
        </p>
      </p>
    <% end %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-3 col-lg-6">
      <%= f.submit yield(:submit_button) || "Add playlist", class: "btn btn-primary" %>
      <%= link_to "cancel", videos_path, class: "btn btn-default" %>
    </div>
  </div>


  <h4>Videos</h4>

  <table class="videos table table-striped">
    <%= render partial: 'video', collection: @videos %>
  </table>

<% end %>
