 <div class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "petroglyph", root_path, class: "navbar-brand", id: "logo" %></li>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li class="active"><%= link_to "Home", root_path %></li>
        <li><%= link_to "About", about_path %></li>
        <li><%= link_to "Videos", videos_path %></li>
      </ul>
      <form class="navbar-form navbar-right">
        <% if user_signed_in? %>

          <div class="btn-group">
            <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
              <%= current_user.email %>
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
              <li role="presentation"><%= link_to "Profile" %></li>
              <li role="presentation"><%= link_to "Settings", edit_user_registration_path %></li>
              <li role="presentation"><%= link_to "Users" %></li>
              <li role="presentation" class="divider"></li>
              <li role="presentation"><%= link_to "Sign out", destroy_user_session_path, method: "delete" %></li>
            </ul>
          </div>

        <% else %>
          <%= link_to "Sign in", new_user_session_path, class: "btn btn-info" %>
        <% end %>
      </form>
    </div>
  </div>
</div>
