<% provide(:title, "Change password") %>

<h1>Change your password</h1>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "form-horizontal" }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, "New password", class: "col-lg-4 control-label", for: "inputPassword" %>

    <div class="col-lg-4">
      <%= f.password_field :password, class: "form-control", id: "inputPassword", :autofocus => true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirm new password", class: "col-lg-4 control-label", for: "inputConfirmation" %>

    <div class="col-lg-4">
      <%= f.password_field :password_confirmation, class: "form-control", id: "inputConfirmation" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-4 col-lg-6">
      <%= f.submit "Change my password", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<div class="col-lg-offset-4 col-lg-6">
  <%= render "users/shared/links" %>
</div>
