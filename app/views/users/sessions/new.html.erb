<% provide(:title, "Sign in") %>

<h1>Sign in</h1>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>

  <div class="form-group">
    <%= f.label :email, class: "col-lg-4 control-label", for: "inputEmail" %>

    <div class="col-lg-4">
      <%= f.email_field :email, class: "form-control", id: "inputEmail", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "col-lg-4 control-label", for: "inputPassword" %>

    <div class="col-lg-4">
      <%= f.password_field :password, class: "form-control", id: "inputPassword" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-6 col-lg-offset-4">
      <% if devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
      <% end -%>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-4 col-lg-6">
      <%= f.submit 'Sign in', class: "btn btn-primary" %>
      <%= link_to "Cancel", root_path, class: "btn btn-default" %>
    </div>
  </div>
<% end %>

<div class="col-lg-offset-4 col-lg-6">
  <%= render "users/shared/links" %>
</div>
